            <input type="text" id="inputWithdrawCode" name="inputWithdrawCode" placeholder="코드 입력" autocomplete='off'>
            <p id="timer_min">3:</p>
            <p id="timer_sec">00</p>
        </div>
        <div id="withdrawCodeMsgWrap">
            <p id="withdrawCodeMsg"></p>
        </div>
        <div id="withdrawCodeBtnWrap">
            <button id="withdrawCode">탈퇴완료</button>
            <button id="cancelWithdrawal">취소</button>
        </div>
    </div>
</div>

