        <div class="mb-3 w-25">
            <input class="form-control" type="text" id="nickname" name="nickname" autocomplete="nickname" placeholder="닉네임" required>
            <span class="nicknameCheckMessage"></span>
        </div>
        <div class="mb-3 w-25">
            <input class="form-control" type="password" id="password" name="password" autocomplete="new-password" placeholder="비밀번호 (최소 6자리 이상)" required>
            <span class="passwordCheckMessage"></span>
        </div>
        <div class="mb-3 w-25 border border-warning">
            <input class="form-control" type="password" id="confirmPwd" name="confirmPwd" autocomplete="new-password" placeholder="비밀번호 재입력" required>
            <span class="confirmPwdCheckMessage"></span>
        </div>
        <button class="w-25 btn btn-success signupBtn disabled">등록하기</button>
    </div>
</form>
