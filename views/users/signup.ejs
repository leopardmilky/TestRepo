<body class="d-flex flex-column vh-100 border border-danger">
<%- include('../partials/navbar') %>

<form action="/signup" method="POST" class="validated-form" novalidate>
    <div class="d-flex mt-5 flex-column align-items-center border border-danger">
        <h1>회원가입</h1>
        <div id="emailWrap" class="mb-3 w-25">
            <div class="d-flex flex-row">
                <input class="form-control" type="email" id="email" name="email" autocomplete="email" placeholder="이메일 입력" required>
                <button id="emailVerification" type="button" class="w-25 p-2 btn btn-sm btn-info">인증하기</button>
            </div>
            <div>
                <span class="emailCheckMessage"></span>
            </div>
        </div>

