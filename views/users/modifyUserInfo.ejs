<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/modifyUserInfo.css">
</head>
<body>
<%- include('../partials/navbar') %>

<div id="userInfoWrap">
    <div id="userInfoInnerWrap">
        <div id="titleWrap">
            <h5 id="title">회원정보수정</h5>
        </div>
        <div id="userIdWrap" class="inputWrap">
            <label class="inputLabel" for="userId">아이디</label>
            <input type="text" class="control-input" id="userId" name="userId" autocomplete="off" value="<%= email %>" readonly disabled>
        </div>
        <div id="nicknameWrap" class="inputWrap">
            <label class="inputLabel" for="nickname">닉네임</label>
            <input type="text" class="control-input" id="nickname" name="nickname" autocomplete="off" value="<%= nickname %>">
        </div>
        <div id="old-password-wrap" class="inputWrap">
            <label class="inputLabel" for="old-password">현재 비밀번호</label>
            <input type="password" class="control-input" id="old-password" name="old-password" autocomplete="off" placeholder="변경 시 입력">
        </div>
        <div id="passwordWrap" class="inputWrap">
            <label class="inputLabel" for="password">새 비밀번호</label>
            <input type="password" class="control-input" id="password" name="password" autocomplete="off" placeholder="변경 시 입력 (최소 6자리 이상)">
        </div>
        <div id="confirmPwdWrap" class="inputWrap">
            <label class="inputLabel" for="confirmPwd">새 비밀번호 확인</label>
            <input type="password" class="control-input" id="confirmPwd" name="confirmPwd" autocomplete="off" placeholder="변경 시 입력 (최소 6자리 이상)">
        </div>
        <div id="buttonWrap">
            <button type="button" id="modify-user-cancel">취소</button>
            <button type="submit" id="modify-user-submit" onclick="modifyUserInfo()">수정완료</button>
        </div>
    </div>
    <div id="withdrawWrap">
        <button type="button" id="withdrawBtn">탈퇴하기</button>
        <!-- 1) 모달창으로 탈퇴하시겠습니까? 확인하고 2) 이메일 인증번호 입력받고 (확인을 누르면 최종 탈퇴처리됩니다.) 3) 탈퇴완료(ㅜㅜ) -->
    </div>
</div>

<div id="modalWrap">
    <div id="modalBody">
        <div id="modalcontent">
            <div id="modalMessage">
                <p>정말로 <b>탈퇴</b> 하시겠습니까?</p>
            </div>
            <div id="modalBtn">
                <button id="closeModal-btn">아니오</button>
                <button id="withdraw-btn">예</button>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
<script src="/javascript/modifyUserInfo.js"></script>
